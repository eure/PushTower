{
  "compilerOptions": {
    "moduleResolution": "node",
    "strict": true, 
    "outDir": "lib",
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "module": "es2015",
    "target": "es5",
    "removeComments": true,
    "baseUrl": "./",
    "declaration": true,
    "lib": [ "es6", "dom" ],
    "paths": {
      "src/*": ["src/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules"
]
}
